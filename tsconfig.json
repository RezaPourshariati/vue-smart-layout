{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "ASSET/*": ["./assets/*"],
      "SERVER/*": ["../server/src/*"],
      "COMMON/*": ["../common/src/*"],
      "THEME/*": ["../theme/*"],
      "LIB-UTIL/*": ["../../lib/util/src/*"],
      "LIB-NODE/*": ["../../lib/node/src/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules",
    "bin",
    "data",
    "build",
    "dist",
    "./**/*.js",
    "./**/*.jsx"
  ],
  "include": [
    "env.d.ts",
    "./**/*.d.ts",
    "./src/**/*",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue"
  ]
}
